#Create K8S cluster
az aks create `
    --resource-group AKS `
    --name rlaksclu `
    --node-count 1 `
    --node-vm-size Standard_D1_v2 `
    --enable-addons monitoring `
    --kubernetes-version 1.9.10 `
    --generate-ssh-keys

#Connect to the cluster
az aks install-cli
az aks get-credentials --resource-group AKS --name rlaksclu

#Create K8S Dashboard
kubectl create clusterrolebinding kubernetes-dashboard --clusterrole=cluster-admin `
--serviceaccount=kube-system:kubernetes-dashboard

#Open K8S Dashboard
az aks browse --name rlaksclu --resource-group AKS

#Apply configuration
kubectl apply -f .\azure-vote.yaml

#Get nodes
kubectl get nodes
